+    #[allow(clippy::needless_pass_by_ref_mut)]
+    pub fn smart_block_mul<T>(
+        &self,
+        ct1: &mut T,
+        ct2: &mut crate::shortint::Ciphertext,
+        index: usize,
+    ) -> T
