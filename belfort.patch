+pub fn reduce_sign_block(x: u64) -> u64 {
+  let relevant_bits: u64 = 3;
+
+  // Zero out irrelevant bits
+  let msb = (x >> 2) & relevant_bits;
+  let lsb = x & relevant_bits;
+
+  if msb == IS_EQUAL {
+    lsb
+  } else {
+    msb
+  }
+}
