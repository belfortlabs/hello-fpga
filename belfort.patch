+    fn reduce_signs_for_min_max_pack(&self, mut sign_blocks: Vec<Ciphertext>) -> Ciphertext {
+        while sign_blocks.len() > 2 {
+            let mut sign_blocks_packed: Vec<Ciphertext> = sign_blocks
