+        let mut result_lsb = shifted_ct.clone();
+        let mut result_msb = shifted_ct;
+        self.key.key.unchecked_block_mul_lsb_msb_parallelized(
+            &mut result_lsb,
+            &mut result_msb,
+            ct2,
+            index,
+        );
+        result_msb = self.blockshift(&result_msb, 1);
+
+        self.unchecked_add(&result_lsb, &result_msb)
