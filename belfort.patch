+        }
+
+        let final_lut_name: &str;
+        let mut result: Ciphertext;
+        if sign_blocks.len() == 2 {
+            final_lut_name = "two_blocks_min_max";
+            result = sign_blocks[1].clone();
+        } else {
+            final_lut_name = "one_block_min_max";
+            result = sign_blocks[0].clone();
+        };
